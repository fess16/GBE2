{
  "manifest_version": 2,
  "name": "Fess GBE2",
  "version": "0.0.1b",
  "description": "Google Bookmark tool",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "icons": {
    "48": "images/logo.svg"
  },

  "applications": {
    "gecko": {
      "id": "GBE2@fess16.blogspot.com",
      "strict_min_version": "53.0"
    }
  },

  "permissions": [
    "http://www.google.com/bookmarks/", "https://www.google.com/bookmarks/", "http://*/*", "https://*/*" ,
    "bookmarks",
    "tabs",
    "activeTab","contextMenus","cookies","notifications","storage","webNavigation","webRequest", "history"

  ],

  "optional_permissions": [
    "http://www.google.com/bookmarks/", "https://www.google.com/bookmarks/",  "http://*/*", "https://*/*" ,
    "bookmarks",
    "tabs",
    "activeTab","cookies","notifications","webNavigation","webRequest", "history"

  ],

  "browser_action": {
    "default_icon": {
      "18" : "images/Star_empty.png",
      "32" : "images/Star_empty32.png"
    },
    "default_title": "Fess GBE2",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "page": "background.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab":true
  },
  
  "default_locale": "en"
}
